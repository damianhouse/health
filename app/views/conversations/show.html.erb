<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= User.find(@conversation.user_id).name %>
</p>

<p>
  <strong>Coach:</strong>
  <%= Coach.find(@conversation.coach_id).name %>
</p>

<table class="conversation">
  <thead>
    <tr>

      <th>Body</th>
      <th>User id</th>
      <th>Coach id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conversation.messages.each do |message| %>
      <tr>
        <td><%= message.body %></td>
        <td><%= message.user_id %></td>
        <td><%= message.coach_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<%= form_for @message do |f| %>
  <%= render partial: "message_form", locals: {f: f} %>
<% end %>





<%= link_to 'Edit', edit_conversation_path(@conversation) %> |
<%= link_to 'Back', conversations_path %>
