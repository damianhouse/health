<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @conversation.user_id %>
</p>

<p>
  <strong>Coach:</strong>
  <%= @conversation.coach_id %>
</p>

<p>
  <strong>Active:</strong>
  <%= @conversation.active %>
</p>

<table class="conversation">
  <thead>
    <tr>
      <th>Conversation</th>

      <th>Body</th>
      <th>User id</th>
      <th>Coach id</th>
      <!-- <th>Read</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conversation.messages.each do |message| %>
      <tr>
        <td><%= message.conversation_id %></td>
        <td><%= message.body %></td>
        <td><%= message.user_id %></td>
        <td><%= message.coach_id %></td>
        <!-- <td><%= message.read %></td> -->
        <!-- <td><%= link_to 'Show', message %></td> -->
        <!-- <td><%= link_to 'Edit', edit_message_path(message) %></td> -->
        <!-- <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
  <td><%= link_to 'New', new_message_path(:conversation => @conversation.id) %></td>

</table>

<br>



<%= form_for @message do |f| %>
  <%= render partial: "message_form", locals: {f: f} %>
<% end %>





<%= link_to 'Edit', edit_conversation_path(@conversation) %> |
