
<% if notice %>
  <p id="notice_login"><%= notice %></p>
<% end %>

<p class="orange_text"><%= alert %></p>


<h1>Please Sign In</h1>
 <%= form_tag do %>
   <p><%= email_field_tag :email, nil, placeholder: "Email" %></p>
  <p><%= password_field_tag :password, nil, placeholder: "Password" %></p>
  <%= submit_tag "Sign In", class: "btn-health" %>
 <% end %>
<br>
 <%= link_to 'Sign Up Now', new_user_path, class: 'orange_text' %> <span class='orange_text'> &nbsp|&nbsp </span>
 <%= link_to 'Forgot your password?', reports_write_email_path, class: 'orange_text' %>
