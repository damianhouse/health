<p id="notice"><%= notice %></p>
<h1>Coaches Profile</h1>

<% if @coach.avatar_url == nil %>
  <div id="profile_img">
    <span class="badge"><img class="center-block" src="/assets/generic_avatar.jpg" alt="alt avatar"/></span>
  </div>
<% else %>
<div id="profile_img">
  <span class="badge"><%=image_tag @coach.avatar_url, class: "center-block"%></span>
</div>
<% end %>
<ul class="list-group">
  <li class="list-group-item">
    <span class="badge"><%= @coach.first %></span>
    Name:
  </li>
  <li class="list-group-item">
    <span class="badge"><%= @coach.last %></span>
    Name:
  </li>
  <li class="list-group-item">
    <span class="badge"><%= @coach.email %></span>
    Email:
  </li>
  <li class="list-group-item">
    <span class="badge"><%= @coach.phone %></span>
  <strong>  Phone: </strong>
  </li>
  <li class="list-group-item">
    <span class="badge"><%= @coach.zip %></span>
  <strong>  Zip: </strong>
  </li>

  <li class="list-group-item">
<%= link_to 'Edit', edit_coach_path(@coach), class: 'list-group-item btn btn-info edit'%>
  </li>
</ul>
