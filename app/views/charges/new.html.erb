<h1 class="text-center">Sign Up Steps:</h1>
<h1 class="text-center"><strong>1 . . 2 . . 3</strong></h1>
<% flash.each do |key, value| %>
  <%= content_tag :h3, value, class: "flash #{key}" %>
<% end %>

<h3 class="text-center">Thanks for signing up! Your account was successfully created!</h3>

<h3 class="text-center">Before any coaches are assigned to assist you, you must pay the subscription below:</h3></br>

<h3 class="text-center"><span class="coupon">Coupon:</span> For the introductory $10 per week for a month coupon enter: <span class="coupon">Meet My Team</span></h3>

<% @plans.each do |plan| %>
  <%= form_tag charges_path, method: :post do %>
    <div class="plan text-center">
      <h1><%= plan[:name] %></h1>
      <%= hidden_field_tag :amount, plan[:amount] %>
      <%= hidden_field_tag :plan, plan[:id] %>
      <%= hidden_field_tag :plan_interval, plan[:interval] %>
      <%= hidden_field_tag :interval_count, plan[:interval_count] %>

      <% if plan[:interval] == "week" %>
        <p>
          <%= label_tag(:couponCode, 'Coupon:') %>
          <%= text_field_tag(:couponCode) %>
        </p>
      <% end %>
        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-description= <%= plan[:name] %>
        data-amount= <%= plan[:amount] %>
        data-locale="auto"></script>
    </div>
  <% end %>
<% end %>
